# Routes
# This file defines all application routes (Higher priority routes first)
# Command to start the server with proxy configuration for Angular development:
# ng serve --proxy-config src/proxy.conf.json
# sbt -jvm-debug 5005 run
# ng build --configuration production
# https://disaffectedly-coleopterous-allena.ngrok-free.dev

# Home page - serves Angular app
#GET     /                           controllers.HomeController.index

# Auth API
POST    /api/login                  controllers.AuthController.login

# User API to fetch all users except the current user
GET     /api/users/:currentUserId     controllers.UserController.getAllUsers(currentUserId: Long)

# Language API to check if the provided message contains Abusive Words
POST   /api/check-abusive-words    controllers.AbusiveWordsController.checkAbusiveWords

# Quality API to score appreciation and get AI coaching guidance
POST   /api/check-appreciation-quality    controllers.AppreciationQualityController.checkQuality


# Static assets from public directory
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /                              controllers.Assets.at(path="/public/dist", file="index.html")
GET     /*file                         controllers.Assets.at(path="/public/dist", file)